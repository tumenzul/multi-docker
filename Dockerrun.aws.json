{
    "AWSEBDockerrunVersion":2,
    "containerDefinitions":[
        {
            "name": "client",
            "image": "tumenzul/multi-client",
            "hostname": "client",
            "essential": false
        },
        {
            "name": "server",
            "image": "tumenzul/multi-server",
            "hostname": "server",
            "essential": false
        },
        {
            "name": "worker",
            "image": "tumenzul/multi-worker",
            "hostname": "worker",
            "essential": false
        },
        {
            "name": "nginx",
            "image": "tumenzul/multi-nginx",
            "hostname": "nginx",
            "essential": true,
            "posrtMappings":[
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links":["client","server"]
        }
    ]
}